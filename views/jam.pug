extends layout

block content
  h1 = title
  - 
    let jams = results

  div(class="container-fluid")
    div(class="row m-1")
      each index in jams
        - let destination = `dispatch(\"/jam/update?id=${index._id}\")`
        div(class="row-sm-2", class="m-1") Jam Flavor #{index.Flavor}(#{index.Size}) priced at #{index.Price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
    function dispatch(path){
      window.location.href=path
    }